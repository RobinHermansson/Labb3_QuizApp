<Window x:Class="Labb3_QuizApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Labb3_QuizApp"
        xmlns:views="clr-namespace:Labb3_QuizApp.Views"
        mc:Ignorable="d"
        Title="Quizzinator 4000" Height="550" Width="800"
        MinHeight="550" MinWidth="800">
    <Window.InputBindings>
    <KeyBinding Key="Enter" Modifiers="Alt" Command="{Binding FullScreenToggleCommand}"/>
    <KeyBinding Key="I" Modifiers="Ctrl" Command="{Binding OpenExternalImportOptionsCommand}"/>
    <KeyBinding Key="F4" Modifiers="Alt" Command="{Binding ExitGameCommand}"/>
    <KeyBinding Key="Insert" Command="{Binding ConfigurationViewModel.AddNewQuestionCommand}"/>
    <KeyBinding Key="Delete" Command="{Binding ConfigurationViewModel.RemoveSelectedQuestionCommand}"/>
    <KeyBinding Key="O" Modifiers="Ctrl"  Command="{Binding ConfigurationViewModel.OpenOptionsWindowCommand}"/>
    <KeyBinding Key="P" Modifiers="Ctrl"  Command="{Binding SwitchToPlayerViewCommand}"/>
</Window.InputBindings>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <views:MenuView Grid.Row="0"></views:MenuView>
        <ContentControl Grid.Row="1">
            <ContentPresenter Content="{Binding CurrentView}"/>
        </ContentControl>


            <!-- views:PlayerView x:Name="playerView" Grid.Row="1"></views:PlayerView-->
        <!--views:ConfigurationView Grid.Row="1"></views:ConfigurationView-->
    </Grid>
</Window>

