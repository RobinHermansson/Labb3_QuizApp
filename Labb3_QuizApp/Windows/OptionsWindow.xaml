<Window x:Class="Labb3_QuizApp.Windows.OptionsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Labb3_QuizApp.Windows"
        mc:Ignorable="d"
        Title="Pack Options" Height="280" Width="220"
        ResizeMode="NoResize">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <StackPanel 
            HorizontalAlignment="center" 
            VerticalAlignment="Center" 
            Grid.ColumnSpan="2" 
            Grid.Row="0"
        >
            <Label 
                Content="Pack Name:" 
                Margin="5 0 10 0"
            />
            <TextBox 
                Text="{Binding Name}" 
                Margin="10 0 10 0" 
                Width="180"
            />
        </StackPanel>
        <StackPanel 
            HorizontalAlignment="center" 
            VerticalAlignment="Center"
            Grid.ColumnSpan="2"
            Grid.Row="1"
        >


            <Label 
                Content="Difficulty:" 
                Margin="5 0 10 0"
            />
            <ComboBox 
                ItemsSource="{Binding DifficultyValues}"
                SelectedItem="{Binding Difficulty, UpdateSourceTrigger=PropertyChanged}"
                Margin="10 0 10 0"
                Width="180"
            />
        </StackPanel>
        <StackPanel 
            HorizontalAlignment="center" 
            VerticalAlignment="Center"
            Grid.ColumnSpan="2"
        >
            
        </StackPanel>
        
       <Label 
           Content="Timelimit" 
           Margin="5 0 10 0" 
           Grid.Column="0" 
           Grid.Row="2" 
           VerticalAlignment="Center"
       />
        <StackPanel
            Grid.Row="2"
            Grid.Column="1"
            Orientation="Horizontal"
            VerticalAlignment="Center"
            HorizontalAlignment="Center"
        >
            <Label 
                Content="{Binding ElementName=SecondsSlider, Path=Value}"
                Grid.Column="1"
                Grid.Row="2"
                HorizontalAlignment="Right"
                VerticalAlignment="Center"
            />
            <Label 
                Content=" Seconds"
                HorizontalAlignment="Right"
                VerticalAlignment="Center"
            />

        </StackPanel>

        <Slider x:Name="SecondsSlider" 
                Grid.Row="3" 
                Grid.ColumnSpan="2" 
                TickPlacement="BottomRight" 
                Value="{Binding TimeLimitInSeconds}"
                Minimum="5"
                Maximum="120"
                Margin="10 0 10 0"
                TickFrequency="5"
                IsSnapToTickEnabled="True"
        />
            <Button Grid.Row="4" Grid.Column="0" Content="Cancel" Width="50" 
            Command="{Binding CancelCommand}"
            VerticalAlignment="Center" HorizontalAlignment="Center"/>
            <Button Grid.Row="4" Grid.Column="1" Width="50" 
             Content="{Binding ConfirmButtonText}" 
             Command="{Binding ConfirmCommand}"
             VerticalAlignment="Center" HorizontalAlignment="Center"/>       
        
    </Grid>
</Window>
