<UserControl x:Class="Labb3_QuizApp.Views.MenuView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Labb3_QuizApp.Views"
             xmlns:fa="http://schemas.awesome.incremented/wpf/xaml/fontawesome.sharp"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Menu>
            <MenuItem Header="_File">
                <MenuItem Header="_New Question Pack" Icon="{fa:Icon File}"/>
                <MenuItem Header="_Select Question Pack"/>
                <!--MenuItem.ItemTemplate>
                    <DataTemplate>
                        <MenuItem ItemSource="{Binding AvailablePacks}"/>
                    </DataTemplate>
                </MenuItem.ItemTemplate>
                <MenuItem /-->
                <MenuItem Header="_Delete Question Pack"/>
                <Separator/>
                <MenuItem Header="E_xit" Icon="{fa:Icon DoorOpen}"/>
            </MenuItem>
            <MenuItem Header="_Edit">
                <MenuItem Header="_Add Question" Icon="{fa:Icon plus}" InputGestureText="Ctrl+A"/>
                <MenuItem Header="_Remove Question" Icon="{fa:Icon minus}"/>
                <MenuItem Header="_Pack Options" Icon="{fa:Icon gear}" Command="{Binding ConfigurationViewModel.OpenOptionsWindowCommand}"/>
            </MenuItem>
            <MenuItem Header="_View">
                <MenuItem Header="_Play" Command="{Binding SwitchToPlayerViewCommand}"/>
                <MenuItem Header="_Configure" Command="{Binding SwitchToConfigurationViewCommand}"/>
            </MenuItem>
        </Menu>
    </Grid>
</UserControl>
