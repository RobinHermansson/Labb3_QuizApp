<UserControl x:Class="Labb3_QuizApp.Views.PlayerView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Labb3_QuizApp.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             DataContext="{Binding PlayerViewModel}">
    <Grid>
        <StackPanel>
            <TextBox Text="{Binding DemoText, UpdateSourceTrigger=PropertyChanged}"/>

            <Button Content="{Binding ActivePack.Name}"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Command="{Binding SetPackNameCommand}"
            />
        </StackPanel>

    </Grid>
</UserControl>
    
