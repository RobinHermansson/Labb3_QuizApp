<UserControl x:Class="Labb3_QuizApp.Views.PlayerView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Labb3_QuizApp.Views"
             xmlns:answertostateconverter="clr-namespace:Labb3_QuizApp.Converters"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             DataContext="{Binding PlayerViewModel}">
    <UserControl.Resources>
        <answertostateconverter:AnswerToStateConverter x:Key="AnswerToStateConverter"/>
    </UserControl.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Label Grid.Row="0" 
               x:Name="CountdownTimer" 
               Content="{Binding TimerText}" 
               HorizontalAlignment="Right" 
               VerticalAlignment="Top" 
               FontSize="30" 
               FontWeight="Bold"
               Margin="10 10 10 0"/>
        <StackPanel Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock x:Name="QuestionTextBlock"
                       Text="{Binding CurrentQuestion.Query}" 
                       FontSize="25"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Bottom"
                       Margin="10 10 10 0"/>
            <TextBlock x:Name="QuestionCountTextBlock"
                       Text="{Binding CurrentQuestionOutOfTotal}"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Bottom"/>
        </StackPanel>
        <ItemsControl Grid.Row="2" ItemsSource="{Binding CurrentQuestion.AnswerOptions}">
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <Button Content="{Binding Text}" 
                            Margin="10" 
                            Padding="20"
                            Command="{Binding DataContext.SelectAnswerCommand, 
                                      RelativeSource={RelativeSource AncestorType=ItemsControl}}"
                            CommandParameter="{Binding}"
                            Background="{Binding State, Converter={StaticResource AnswerToStateConverter}}"/>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <WrapPanel />
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>
        </ItemsControl>
        
        <!--StackPanel Grid.Row="2" Margin="10 10 10 10">
            <StackPanel x:Name="FirstStackPanel" Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                <Button Content="{Binding CurrentQuestion.QuestionsCombined[0]}" 
                        Margin="10 10 10 0" Padding="20" Background="{Binding ButtonColor}"
                        Command="{Binding CheckAnswerAndProceedCommand}" 
                        CommandParameter="{Binding RelativeSource={RelativeSource Self}}"/>
                <Button Content="{Binding CurrentQuestion.QuestionsCombined[1]}"
                        Margin="10 10 10 0" Padding="20" Background="{Binding ButtonColor}"
                        Command="{Binding CheckAnswerAndProceedCommand}" 
                        CommandParameter="{Binding RelativeSource={RelativeSource Self}}"/>
            </StackPanel>
            <StackPanel x:Name="SecondStackPanel" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="10 10 10 10">
                <Button Content="{Binding CurrentQuestion.QuestionsCombined[2]}"
                        Margin="10 10 10 0" Padding="20" Background="{Binding ButtonColor}"
                        Command="{Binding CheckAnswerAndProceedCommand}" 
                        CommandParameter="{Binding RelativeSource={RelativeSource Self}}"/>
                <Button Content="{Binding CurrentQuestion.QuestionsCombined[3]}"
                        Margin="10 10 10 0" Padding="20" Background="{Binding ButtonColor}"
                        Command="{Binding CheckAnswerAndProceedCommand}"
                        CommandParameter="{Binding RelativeSource={RelativeSource Self}}"/>
            </StackPanel>
        </StackPanel-->

    </Grid>
</UserControl>
    
