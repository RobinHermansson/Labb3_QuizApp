<UserControl x:Class="Labb3_QuizApp.Views.PlayerView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Labb3_QuizApp.Views"
             xmlns:answertostateconverter="clr-namespace:Labb3_QuizApp.Converters"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             DataContext="{Binding PlayerViewModel}">
    <UserControl.Resources>
        <answertostateconverter:AnswerToStateConverter x:Key="AnswerToStateConverter"/>
        <Style x:Key="AnswerButtonStyle" TargetType="Button">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                        BorderBrush="{TemplateBinding BorderBrush}"
                        BorderThickness="{TemplateBinding BorderThickness}"
                        Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                      VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="Background" Value="LightGray"/>
            <Setter Property="BorderBrush" Value="#FF707070"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="20"/>
        </Style>
    </UserControl.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Label Grid.Row="0" 
               x:Name="CountdownTimer" 
               Content="{Binding TimerText}" 
               HorizontalAlignment="Right" 
               VerticalAlignment="Top" 
               FontSize="30" 
               FontWeight="Bold"
               Margin="10 10 10 0"/>
        <StackPanel Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock x:Name="QuestionTextBlock"
                       Text="{Binding CurrentQuestion.Query}" 
                       FontSize="25"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Bottom"
                       Margin="10 10 10 0"
                       TextWrapping="Wrap"/>
            <TextBlock x:Name="QuestionCountTextBlock"
                       Text="{Binding CurrentQuestionOutOfTotal}"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Bottom"/>
        </StackPanel>
        <ItemsControl Grid.Row="2" ItemsSource="{Binding CurrentQuestion.AnswerOptions}" 
              HorizontalAlignment="Center" VerticalAlignment="Center">
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <Button Content="{Binding Text}" 
                            Margin="10"
                            Padding="15"
                            MinWidth="200"
                            MinHeight="75"
                            Style="{StaticResource AnswerButtonStyle}"
                            Command="{Binding DataContext.SelectAnswerCommand, 
                                      RelativeSource={RelativeSource AncestorType=ItemsControl}}"
                            CommandParameter="{Binding}"
                            Background="{Binding State, Converter={StaticResource AnswerToStateConverter}}">
                        <Button.ContentTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding}" TextWrapping="Wrap" TextAlignment="Center"/>
                            </DataTemplate>
                        </Button.ContentTemplate>
                    </Button>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <UniformGrid Columns="2" Rows="2"/>
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>
        </ItemsControl>
        
     </Grid>
</UserControl>
    
